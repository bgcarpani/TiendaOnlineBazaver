                @*@Html.Partial("_LoginPartial")*@

            </div>
        </div>
    </nav>
    <header class="masthead" style="background-image:none">

        <div class="container; col-12" style="padding-top:20px">

            <div class="col-md-12">
                <h1 style="color:black; text-align:center">

                    Productos
                </h1>
                <h4 style="color:black; text-align:center">

                    Lista de productos:
                </h4>

                <p>
                    @Html.ActionLink("Agregar Producto", "Create", new { }, new { @class = "btn btn-primary" })
                    <a class="btn btn-primary btn" data-toggle="modal" href="#colorProductos">
                        Color Producto
                    </a>
                </p>
                <table id="productosTable" class="display">
                    <thead>
                        <tr>
                            <th>
                                Imagen
                            </th>
                            <th>
                                Producto
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Categoria.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Color.Nombre)
                            </th>

                            <th>
                                Precio Minorista
                            </th>
                            <th>
                                Precio Mayorista
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Stock)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.InventarioList)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Productos.Image))
                                    {
                                        <img src="@Url.Content(item.Productos.Image)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Productos.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Productos.Categoria.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Color.Nombre)
                                </td>

                                <td>
                                    $@Html.DisplayFor(modelItem => item.Productos.PrecioMin)
                                </td>
                                <td>
                                    $@Html.DisplayFor(modelItem => item.Productos.PrecioMay)
                                </td>
                                @if (item.Stock <= 5)
                                {
                                    <td style="color:red">
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                }


                                <td>

                                    @Html.ActionLink("Editar", "Edit", new { id = item.ProductoId }, new { @class = "btn btn-primary" })
                                    @*@Html.ActionLink("Stock", "EditStock", new { id = item.ProductoId }, new { @class = "btn btn-primary" })*@
                                    <a class="btn btn-primary btn stock-modal-btn"
                                       data-toggle="modal" data-productid='@item.ProductoId' data-inventoryid='@item.InventarioId' data-stock='@item.Stock' data-colorid='@item.ColorId' href="#editStock">
                                        Stock
                                    </a>
                                    @*@Html.ActionLink("Details", "Details", new { id = item.ProductoId })*@
                                    @Html.ActionLink("Borrar", "Delete", new { id = item.ProductoId, id2 = item.ColorId }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#productosTable').DataTable();
                    });
                </script>
            </div>
        </div>
    </header>
</body>

<div class="modal fade" id="colorProductos" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar color a producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="container">
                <div class="modal-body">
                    <div>
                        <h4 style="color:black; text-align:center">
                            Agregar color a productos existentes
                        </h4>

                        @using (Html.BeginForm("ColorProducto", "Productos", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row" style="padding-top:35px">
                                <div>
                                    @Html.Label("Producto", htmlAttributes: new { @class = "col-md-2", style = "color:black" })
                                </div>
                                <div style="padding-left:10px">
                                    @Html.DropDownList("ProductoId", null, htmlAttributes: new { @class = "" })
                                    @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                                </div>

                                <div style="padding-left:20px">
                                    @Html.Label("Color", htmlAttributes: new { @class = "col-md-2", style = "color:black" })
                                </div>
                                <div style="padding-left:10px">
                                    @Html.DropDownList("ColorId", null, htmlAttributes: new { @class = "" })
                                    @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                                </div>
                              
                            </div>
                            <div style="padding-top:20px;padding-left:100px ">

                                @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = " col-md-2", style = "color:black" })
                                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "", style = "width:100px" } })
                                @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
                            </div>
                            <div class="row" style="padding-top:50px;padding-left:130px">
                                <div class="col-md-10">
                                    <input type="submit" value="Crear" class="btn btn-primary" />
                                    @Html.ActionLink("Atrás", "Index", new { }, new { @class = "btn btn-success" })
                                </div>
                            </div>

                        }

                    </div>


                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>

<div class="modal fade edit-stock" id="editStock" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="container">
                <div class="modal-body">
                    <div>
                        <h4 style="color:black; text-align:center">
                            Modificar Color/Actualizar Stock
                        </h4>

                        @using (Html.BeginForm("EditStock", "Productos", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="row" style="padding-top:35px;padding-left:65px">

                                @Html.Label("Color", htmlAttributes: new { @class = "col-md-2", style = "color:black" })
                                @Html.DropDownList("ColorId", null, htmlAttributes: new { @class = "" })
                                @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })

                                @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = " col-md-2", style = "color:black" })
                                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "", style = "width:100px" } })
                                @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })


                            </div>

                            <div class="row" style="padding-top:30px;padding-left:150px">
                                <div class="col-md-10">
                                    <input type="hidden" id="ProductoId" name="ProductoId" value="" />
                                    <input type="hidden" id="InventarioId" name="InventarioId" value="" />
                                    <input type="submit" value="Editar" class="btn btn-success" />
                                    @Html.ActionLink("Atrás", "Index", new { }, new { @class = "btn btn-primary" })
                                </div>
                            </div>

                        }

                    </div>


                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>





