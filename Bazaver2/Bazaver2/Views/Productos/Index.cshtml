<script>
    $(document).ready(function () {
        $(document).on("click", ".stock-modal-btn", function () {
            //alert($(this).data('productid'));
            var productId = $(this).data('productid');
            $(".edit-stock #ProductoId").val(productId);
            var inventoryId = $(this).data('inventoryid');
            $(".edit-stock #InventarioId").val(inventoryId);
            var stock = $(this).data('stock');
            $(".edit-stock #Stock").val(stock);
            var colorid = $(this).data('colorid');
            $(".edit-stock #ColorId").val(colorid);
        });
    });
</script>